[Unit]
Description=ZKTeco Livewire Bridge Service
Documentation=https://github.com/HilmanAnshori/zkteco-livewire-bridge
After=network.target

[Service]
Type=simple
User=zkteco
WorkingDirectory=/opt/zkteco-livewire-bridge
ExecStart=/usr/bin/node index.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=zkteco-bridge

# Environment
Environment=NODE_ENV=production

# Security
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
